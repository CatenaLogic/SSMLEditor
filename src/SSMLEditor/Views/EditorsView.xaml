<catel:UserControl x:Class="SSMLEditor.Views.EditorsView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com"
                   xmlns:orccontrols="http://schemas.wildgums.com/orc/controls"
                   xmlns:views="clr-namespace:SSMLEditor.Views">

    <Grid>
        <orccontrols:TabControl ItemsSource="{Binding Languages}">
            <orccontrols:TabControl.ItemTemplate>
                <DataTemplate>
                    <views:EditorView DataContext="{Binding Language}" />
                </DataTemplate>
            </orccontrols:TabControl.ItemTemplate>
        </orccontrols:TabControl>
    </Grid>
    
</catel:UserControl>
